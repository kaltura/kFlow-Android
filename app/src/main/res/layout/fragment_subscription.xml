<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/view_shared_transition_header" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/packageAssetTypeInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/packageAssetType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Package asset type"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/getPackages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_primary_rounded"
                android:elevation="4dp"
                android:foreground="?selectableItemBackground"
                android:text="Get Package List"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:initialCornerAngle="4dp"
                app:spinning_bar_color="#FFF"
                app:spinning_bar_padding="6dp"
                app:spinning_bar_width="2dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/packageList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/showAssets"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:visibility="gone" />

            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/getEntitlements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_primary_rounded"
                android:elevation="4dp"
                android:foreground="?selectableItemBackground"
                android:text="Get Entitlement List"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:initialCornerAngle="4dp"
                app:spinning_bar_color="#FFF"
                app:spinning_bar_padding="6dp"
                app:spinning_bar_width="2dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/view_bottom_debug" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>